<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.injurytime</groupId>
    <artifactId>injurytime-suite</artifactId>
    <version>1.0.0</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <artifactId>model.api</artifactId>
  <packaging>nbm</packaging>

  <build>
    <plugins>
      <!-- NBM plugin (put config directly in THIS module so it 100% applies) -->
      <plugin>
        <groupId>org.apache.netbeans.utilities</groupId>
        <artifactId>nbm-maven-plugin</artifactId>
        <version>14.3</version>
        <configuration>
          <publicPackages>
            <!-- Export the EXACT package your DTOs live in -->
            <publicPackage>com.injurytime.model</publicPackage>
            <!-- TEMPORARY DIAGNOSTIC: export everything to prove the point -->
            <!-- <publicPackage>*</publicPackage> -->
          </publicPackages>
        </configuration>
      </plugin>

      <!-- Make the JAR use the manifest generated by the NBM plugin -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.4.2</version>
        <configuration>
          <archive>
            <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
          </archive>
        </configuration>
      </plugin>

      <!-- Ensure the classes compile to your target JDK -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <release>21</release>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
