<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="injurytimePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <!-- List entities or rely on classpath scanning -->
    <class>com.injurytime.storage.jpa.entity.Player</class>
    <class>com.injurytime.storage.jpa.entity.Club</class>
    <class>com.injurytime.storage.jpa.entity.LeagueSeason</class>
    <class>com.injurytime.storage.jpa.entity.ClubSeason</class>
    <class>com.injurytime.storage.jpa.entity.SquadRoster</class>
    <class>com.injurytime.storage.jpa.entity.PlayerAlias</class>
    <class>com.injurytime.storage.jpa.entity.ClubAlias</class>
    <class>com.injurytime.storage.jpa.entity.ResolutionOverride</class>
    <class>com.injurytime.storage.jpa.entity.ClubDomainHint</class>

    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:derby://localhost:1527/c:/dbs/stramash;create=false"/>
      <property name="jakarta.persistence.jdbc.user" value="clayton"/>
      <property name="jakarta.persistence.jdbc.password" value="clayton"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.client.ClientAutoloadedDriver"/>
      <!-- Optional but handy -->
      <property name="hibernate.default_schema" value="CLAYTON"/>
      <property name="hibernate.hbm2ddl.auto" value="none"/>
    </properties>
  </persistence-unit>
</persistence>


